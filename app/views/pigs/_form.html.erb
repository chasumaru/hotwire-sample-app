
<%# バリデーションエラーの表示はbootstrap_formが用意してくれるので、自前で用意する必要がなくなる %>
 <%# ラベルはbootstrap_formが用意してくれるので、自前で用意する必要がなくなる %>
 <%# Bootstrapのclass属性もbootstrap_formが設定してくれるので、自前で用意する必要はない %>
<%# 編集リンクをクリックすると、_pig.html.erbの<turbo-frame>部分がこの部分に置換される %>
<%= turbo_frame_tag pig do %>
  <%= bootstrap_form_with(model: pig, data: {action: "turbo:submit-end->modal#close"}) do |form| %>
    <%= form.text_field :name %>
    <%= form.number_field :age %>
    <%= form.primary %>
  <% end %>
<% end %>