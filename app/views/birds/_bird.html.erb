<%= turbo_frame_tag bird do %>
  <div class="row py-2 border-top">
    <div class="col-4 my-auto">
      <%= bird.name %>
    </div>
    <div class="col-4 my-auto">
      <%= bird.age %>
    </div>
    <div class="col-4">
      <div class="d-flex justify-content-end">
        <%= link_to "編集", edit_bird_path(bird), class: "btn btn-sm btn-outline-primary me-2", data: { turbo_frame: "modal" } %>
        <%= button_to "削除", bird, method: :delete, class: "btn btn-sm btn-outline-danger", form: { data: { turbo_confirm: "本当に削除しますか？" } } %>
      </div>
    </div>
  </div>
<% end %>